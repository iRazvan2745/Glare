{
  "name": "glare",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "arktype": "^2.1.20",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "better-auth": "^1.4.18"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev:native": "turbo run dev --filter=native",
    "dev:web": "turbo run dev --filter=web",
    "dev:server": "turbo run dev --filter=server",
    "test:web": "turbo run test --filter=web",
    "db:push": "cd packages/db && bun db:push",
    "db:studio": "turbo run db:studio --filter=@glare/db",
    "db:generate": "cd packages/db && bun db:generate",
    "db:migrate": "turbo run db:migrate --filter=@glare/db",
    "db:repair": "turbo run db:repair --filter=@glare/db",
    "db:start": "turbo run db:start --filter=@glare/db",
    "db:watch": "turbo run db:watch --filter=@glare/db",
    "db:stop": "turbo run db:stop --filter=@glare/db",
    "db:down": "turbo run db:down --filter=@glare/db",
    "db:init": "bun db:generate && bun db:push",
    "check": "oxlint && oxfmt --write"
  },
  "dependencies": {
    "dotenv": "catalog:"
  },
  "devDependencies": {
    "@glare/config": "workspace:*",
    "@types/bun": "catalog:",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.41.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.4"
}
